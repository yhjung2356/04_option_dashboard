    z-index: 10;
}

.call-header {
    background: #4CAF50;
    color: white;
    padding: 12px;
    text-align: center;
    font-weight: 700;
}

.strike-header {
    background: #FF9800;
    color: white;
    padding: 12px;
    text-align: center;
    font-weight: 700;
}

.put-header {
    background: #f44336;
    color: white;
    padding: 12px;
    text-align: center;
    font-weight: 700;
}

.option-chain-table th {
    padding: 10px 8px;
    text-align: center;
    font-weight: 600;
    background: #f5f5f5;
    border: 1px solid #ddd;
}

.option-chain-table td {
    padding: 8px;
    text-align: center;
    border: 1px solid #f0f0f0;
}

.option-chain-table tbody tr:hover {
    background: #f9f9f9;
}

/* ATM 행사가 강조 */
.option-chain-table tr.atm-strike {
    background: #fff3cd;
    font-weight: 700;
}

